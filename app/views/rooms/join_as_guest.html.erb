<% content_for :body_class, "bg-black" %>

<div class="join-room-container">
  <div class="join-room-header">
    <h1>Join this room</h1>
  </div>

  <!-- Room Code Display -->
  <div class="join-room-info">
    <p class="room-code-text">Room Code: <span class="code-value"><%= @room.code %></span></p>
  </div>

  <!-- Guest Join Form -->
  <div class="join-form-container">
    <h2>Enter Your Name</h2>

    <% if flash[:alert] %>
      <div class="alert alert-error">
        <%= flash[:alert] %>
      </div>
    <% end %>

    <%= form_with url: join_as_guest_path(@room), method: :post, local: true do |f| %>
      <div class="form-group">
        <%= f.label :guest_name, "Your Name" %>
        <%= f.text_field :guest_name, placeholder: "Enter your name", class: "input-field" %>
      </div>

      <div class="form-actions">
        <%= f.submit "Join Room", class: "button submit-btn" %>
      </div>
    <% end %>
  </div>
</div>