<% content_for :body_class, "bg-black" %>

<div class="solo-spin-container" data-controller="solo-spin">
  <h1 class="solo-spin-title">Solo Spin</h1>

  <!-- Preferences Section -->
  <div class="preference-section">
    <h2>Set Your Preferences</h2>
    <p class="subtitle">Choose your criteria for the perfect restaurant</p>

    <!-- Name Field -->
    <div class="form-group">
      <label>Your Name</label>
      <input type="text" 
             data-solo-spin-target="nameInput"
             value="<%= @name %>"
             placeholder="Enter your name"
             <%= 'readonly' if user_signed_in? %>>
    </div>

    <!-- Location Dropdown -->
    <div class="form-group">
      <label>Neighborhood</label>
      <select data-solo-spin-target="locationSelect" class="neighborhood-select">
        <option value="">Select a neighborhood</option>
      </select>
    </div>

    <!-- Price Range -->
    <div class="form-group">
      <label>Price Range</label>
      <select data-solo-spin-target="priceSelect" class="neighborhood-select">
        <option value="">Select price range</option>
        <option value="$">$ - Budget-friendly</option>
        <option value="$$">$$ - Moderate</option>
        <option value="$$$">$$$ - Upscale</option>
        <option value="$$$$">$$$$ - Fine Dining</option>
      </select>
    </div>

    <!-- Cuisines Multi-Select -->
    <div class="form-group">
      <label>Cuisines <small style="color: rgba(255, 255, 255, 0.5);">(Select at least one)</small></label>
      <div class="cuisines-grid" data-solo-spin-target="cuisinesGrid">
        <div style="color: rgba(255, 255, 255, 0.5); padding: 1rem;">Loading cuisines...</div>
      </div>
      <input type="hidden" data-solo-spin-target="categoriesInput">
    </div>

    <div class="validation-message" data-solo-spin-target="validationMessage" style="display: none;">
      Please fill in all fields
    </div>
  </div>

  <!-- Wheel Section -->
  <div class="wheel-section">
    <canvas id="roulette-wheel"
            data-solo-spin-target="wheel" 
            width="300" 
            height="300"
            data-action="click->solo-spin#spin"></canvas>
  </div>

  <div class="button-group">
    <button class="button spin-button" 
            data-solo-spin-target="spinButton"
            data-action="click->solo-spin#spin">
        Spin the Wheel!
    </button>
  </div>

  <!-- Back Link -->
  <div style="text-align: center; margin-top: 2rem;">
    <%= link_to "â† Back to Home", root_path, style: "color: rgba(255, 255, 255, 0.6); text-decoration: none;" %>
  </div>
</div>